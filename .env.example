# Yaver AI Configuration

# Ollama Configuration - Specialized Models
OLLAMA_BASE_URL=http://localhost:11434

# General LLM (Chat, queries) - Use mistral:7b for speed or nemotron for quality
OLLAMA_MODEL_GENERAL=mistral:7b

# Code Analysis Model (Code understanding, architecture) - Usually larger/better
OLLAMA_MODEL_CODE=deepseek-coder-v2:16b-lite-instruct-q4_K_M

# Fact Extraction Model (RDF triple extraction) - Use smaller/faster model like qwen2.5-coder
# This is called frequently during 'yaver learn', so smaller = faster
OLLAMA_MODEL_EXTRACTION=qwen2.5-coder:7b-instruct-q4_K_M

# Embedding Model (Vector generation for semantic search) - Keep nomic-embed-text
OLLAMA_MODEL_EMBEDDING=nomic-embed-text:latest

# Ollama Authentication (Optional - only if Ollama has basic auth enabled)
# OLLAMA_USERNAME=admin
# OLLAMA_PASSWORD=your_password

# Project Settings
DEFAULT_OUTPUT_DIR=./output
ENABLE_BACKUP=true
BACKUP_DIR=~/.yaver/backups
MAX_ITERATIONS=5
MAX_FILES_PER_ITERATION=10

# Code Analysis Settings
MAX_COMPLEXITY_WARNING=10
MAX_COMPLEXITY_ERROR=15
MIN_MAINTAINABILITY_INDEX=65
ENABLE_SECURITY_SCAN=true
ENABLE_TYPE_CHECKING=true

# Git Settings
CLONE_DEPTH=50
MAX_REPO_SIZE_MB=500
ENABLE_SUBMODULES=false
DEFAULT_BRANCH=main

# Vector Database
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_BATCH_SIZE=100
TOP_K_SIMILAR_FILES=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/yaver.log
ENABLE_RICH_LOGGING=true

# UI Settings
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false
ENABLE_GRADIO_QUEUE=true

# Task Management
MAX_TASK_DEPTH=3
AUTO_PRIORITIZE_TASKS=true
ENABLE_PARALLEL_EXECUTION=false

# Advanced Features
ENABLE_ARCHITECTURE_DIAGRAM=true
ENABLE_DOCUMENTATION_GEN=true
ENABLE_TEST_GENERATION=false
ENABLE_REFACTORING_SUGGESTIONS=true
